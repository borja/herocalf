<%= erb :'ficha/inventario/armas' %>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover table-sm">
		<thead class="thead-dark">
			<tr><th colspan=2 class="text-center">Protecciones</th></tr>
			<tr><td width='80%' class="text-center">Armadura</td>
				<td><%= erb :'display/armadura', locals: {
					a: hero(params[:param].to_i).armour } %>
				</td>
			</tr>
			<% fields[0].each do |field| %>
				<%= erb :'ficha/inventario/field', locals: { fits: field } %>
			<% end %>
		</thead>
	</table>
</div>