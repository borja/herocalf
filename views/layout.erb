<!DOCTYPE html>
<% vista = view(params['view']) %>
<% title = "HeroQuest" %>
<html lang="es">
	<head><%= slim :'layout/head', locals: { title: title } %></head>
	<body>

		<!-- Navigation bar -->
		<nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark fixed-top">
			<div class="container">
				<%= slim :'layout/nav', locals: { title: title } %>
			</div>
		</nav>

		<!-- Carousel (only in '/', /inicio)-->
		<% if params[:view] == 'inicio' %>
			<header><%= erb :'inicio/carrousel' %></header>
		<% end %>

		<div class="container">

			<h1 class="mt-4 mb-3">
				<%= title %>
				<small><%= vista.title %></small>
			</h1>

			<!-- Error Handler -->
			<% if @error then %>
				<%= erb :'layout/error' %>
			<% else %>

				<!-- Page Heading/Breadcrumbs -->
				<%= slim :'layout/breadcrumbs'%>
			<% end %>

			<!-- Main Content -->
			<div class="container-fluid text-center">
				<%= yield %>
			</div>
		</div>

		<footer class="py-5 bg-dark">
			<%= slim :'layout/footer' %>
		</footer>

		<!-- Bootstrap core JavaScript -->
		<script src="/jquery/jquery.min.js"></script>
		<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

	</body>
</html>